generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String   @id @default(uuid()) @db.VarChar(36)
  name          String
  email         String
  username      String?   @unique
  password      String    
  profileImage  String?
  
  created_at    DateTime  @default(now()) @db.Timestamp
  updated_at    DateTime  @updatedAt

}

model Books {
  id String   @id @default(uuid()) @db.VarChar(36)
  author String
  title String
  image String?

  created_at    DateTime  @default(now()) @db.Timestamp
  updated_at    DateTime  @updatedAt
}